\ProvidesPackage{mytodo-beamer}

%% poor-man version of the todo pkg, but allows to insert list of
%% todos with *links* in beamer 

\usepackage{tcolorbox}

\newcounter{todo}
\newtcbox{\mytodobox}{colback=orange,colframe=orange!65!black}

\newcommand\jocommentinline[1]{%
    \refstepcounter{todo} 
    \mytodobox{\textcolor{blue}{\hypertarget{todo\thetodo}{\textbf{Fixme
          JO: }#1}}}
    \addcontentsline{tod}{subsection}{\protect\underline{\textcolor{blue}{\hyperlink{todo\thetodo}{\textbf{Fixme:
            JO: }\thetodo~#1}}}\par} 
}



